    <body>
        <style type="text/css">
            .highlight-white {
                box-shadow: inset 0 0 3px 3px yellow;
            }

            .highlight-black {
                box-shadow: inset 0 0 3px 3px rgb(7, 197, 255);
            }
        </style>

        <main>
            <div class="time">
                <div class="time-white-player">5:00</div>
                <div class="time-black-player">5:00</div>
            </div>

            <div class="names">
                <div class="name-white-player">NAME</div>
                <div class="name-black-player">NAME</div>
            </div>

            <div id="myBoard" style="width: 400px"></div>

            <div class="game-room row">
                <div class="game-room-id col-10">
                    <h2>COPY AND SHARE THIS ROOM:</h2>

                    <div class="game-room-id-row">
                        <input
                            type="text"
                            id="RoomId"
                            disabled
                            placeholder="Enter Room"
                            class="form-control"
                        />
                        <button class="btn btn-secondary copy-button">
                            <i class="far fa-copy"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="win-alert d-none">
                <div class="win-alert-message op1">
                    <div class="mgs-text">El host abandon√≥ la partida</div>
                    <div class="msg_text-center">
                        <a class="btn btn-danger text-center" href="/room"
                            >RETURN TO THE ROOMS</a
                        >
                        <br />
                        <a class="btn btn-primary text-center play_again"
                            >PLAY AGAIN</a
                        >
                    </div>
                </div>
            </div>
        </main>

        <script
            src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.1/socket.io.js"
